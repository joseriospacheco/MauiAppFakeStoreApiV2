<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppFakeStoreApi.Pages.ConsultarProductoPage"
             Title="ConsultarProductoPage">

    <ScrollView Margin="20">
        <VerticalStackLayout
        Padding="30,0"
        Spacing="25">

            <Image x:Name="Img" />

            <Label Text="Código del producto"/>
            <Entry x:Name="EntryCodigoProducto"/>

            <Label Text="Título del producto"/>
            <Entry x:Name="EntryTituloProducto"/>

            <Label Text="Precio del producto"/>
            <Entry x:Name="EntryPrecioProducto"/>

            <Label Text="Categoría del producto"/>
            <Entry x:Name="EntryCategoriaProducto"/>

            <Label Text="Descripción del producto"/>
            <Editor  HeightRequest="150" x:Name="EntryDescripcionProducto"/>





            <Button x:Name="BtnConsultar" Text="Consultar" Clicked="BtnConsultar_Clicked"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>